@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="alert alert-danger text-center">
        <h2 class="text-danger">Access Denied</h2>
        <p>You do not have permission to access this resource.</p>

        <p class="mt-3">
            If you have an account, please <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary btn-sm mx-1">Login</a>.
            If you are new, you can <a href="@Url.Action("Register", "Account")" class="btn btn-outline-success btn-sm mx-1">Register</a>.
        </p>
    </div>
</div>

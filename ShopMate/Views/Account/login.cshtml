@model LoginVM
@{
    Layout = "_LoginRegisterLayout";
    ViewData["Title"] = "Login";

}

    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style="background-image: url('/images/about-01.jpg');"></div>
        <div class="contents order-2 order-md-1">

            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <h3>Login to <strong>ShopMate</strong></h3>
                        <p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p>
                        <form asp-action="Login" >
                          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group first">
                                <label asp-for="Email" ></label>
                                <input asp-for="Email" class="form-control" placeholder="your-email@gmail.com" >
                            <span asp-validation-for="Email" class="text-danger"></span>

                            </div>

                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <div class="input-group">
                                <input asp-for="Password" class="form-control" placeholder="Your Password">
                                <div class="input-group-append">
                                    <span class="input-group-text" onclick="togglePassword('Password')">
                                        <i class="icon-eye"></i>
                                    </span>
                                </div>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>

                        <div class="d-flex mb-5 align-items-center">
                                <label class="control control--checkbox mb-0">
                                <span class="caption"></span>
                                <input type="checkbox" asp-for="RememberMe" checked="checked" /> @Html.DisplayNameFor(model => model.RememberMe)
                                    <div class="control__indicator"></div>
                                </label>
                                <span class="ml-auto"><a asp-action="forgotpassword" class="forgot-pass">Forgot Password</a></span>
                            </div>

                            <input type="submit" value="Log In" class="btn btn-block btn-primary">

                            <p class="text-center mt-3" style="color: black;">Dont't have an account? <a asp-action="Register">Register</a></p>

                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>


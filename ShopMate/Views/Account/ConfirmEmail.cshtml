@* ConfirmEmail.cshtml *@
@model ConfirmEmailVM
@{
    Layout = "_EmailLayout";
    ViewData["Title"] = "Confirm Email";
}

<div class="confirmation-card">
    <img src="/images/confirmation-email.png" alt="Email Confirmation Illustration" />
    <div class="card-body">
        <h4 class="mb-3">Confirm Your Email</h4>
        <p class="text-muted">
            Please enter the confirmation code sent to <strong>@Model?.Email</strong>.
        </p>

        <form asp-action="ConfirmEmail" method="post">
            <input type="hidden" asp-for="Email" />

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Code" class="form-label"></label>
                <input asp-for="Code" class="form-control" placeholder="Enter your code" required />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Verify Email</button>

            <div class="text-center mt-4">
                <a asp-action="Register" class="text-decoration-none">Back to Register</a>
            </div>
        </form>
    </div>
</div>

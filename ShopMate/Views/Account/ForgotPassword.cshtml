@model ForgotPasswordVM

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_LoginRegisterLayout";
}

<div class="d-lg-flex half">
    <div class="bg order-1 order-md-2" style="background-image: url('/images/about-01.jpg');"></div>
    <div class="contents order-2 order-md-1">

        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7">
                    <h3>Forgot Password</h3>
                    <p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p>
                    @if (ViewBag.Message != null)
                    {
                        <p class="text-success text-center mt-3">@ViewBag.Message</p>
                    }
                    <form asp-action="SendResetLink">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group first">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" placeholder="your-email@gmail.com">
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>


                        <input type="submit" value=" Send Reset Link" class="btn btn-block btn-primary" style="margin-top:50px;">

                        <div class="text-center mt-4">
                            <a asp-action="Login" class="text-decoration-none fw-semibold" style= font-size: 1.1rem;">
                                <i class="bi bi-arrow-left"></i> Back to Login
                            </a>
                        </div>

                    </form>

                    
                </div>
            </div>
        </div>
    </div>


</div>


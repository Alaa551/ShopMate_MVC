@{
    Layout = "_EmailLayout";
    ViewData["Title"] = "ConfirmEmailSuccess";
}

<!-- Success Confirmation Page -->
<div class="card shadow border-success mt-5 mx-auto text-center" style="max-width: 460px;">
    <img src="~/images/success.png" alt="Success" style="max-height: 300px;">
    <div class="card-body p-3">
        <h5 class="card-title text-success mb-2">Email Confirmed!</h5>
        <p class="card-text mb-3">Your email has been successfully confirmed. You can now log in.</p>
        <a asp-action="Login" class="btn btn-success btn-sm">Log In</a>
    </div>
</div>
